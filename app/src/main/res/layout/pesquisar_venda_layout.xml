<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/pvl_txvDtVencimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Dt.Venda: "
            android:textSize="12dp" />

        <EditText
            android:id="@+id/pvl_edtDtVencimento"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_marginTop="4dp"
            android:inputType="date"
            android:paddingBottom="9dp"
            android:textSize="12dp" >
        </EditText>
    </LinearLayout>    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/pvl_txvNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight=".36"
            android:text="Venda:"
            android:textSize="13dp" >
        </TextView>

        <EditText
            android:id="@+id/pvl_edtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight=".58"
            android:hint="cliente ou Nº venda"
            android:maxLength="14"
            android:width="150dip" />

        <ImageButton
            android:id="@+id/pvl_btnPesquisar"
            android:layout_width="38dip"
            android:layout_height="40dip"
            android:layout_marginTop="4dp"
            android:layout_weight=".05"
            android:background="@color/transparent"
            android:onClick="eventoCliqueBotao"
            android:src="@drawable/pesquisar" />
    </LinearLayout>

    <!-- <LinearLayout -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" > -->


    <!-- <TextView -->
    <!-- android:id="@+id/pvl_labelCidade" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:paddingTop="10dp" -->
    <!-- android:text="Cidade: " -->
    <!-- android:textSize="12dp" /> -->


    <!-- <Spinner -->
    <!-- android:id="@+id/pvl_cidade" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" /> -->
    <!-- </LinearLayout> -->

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:background="@color/black" />

    <!-- TITULO DAS COLUNAS -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- Nº Venda -->

        <TextView
            android:id="@+id/pvl_txvLabelNumVenda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight=".13"
            android:gravity="center"
            android:text="Nº V."
            android:textSize="14dp" >
        </TextView>

        <!-- CLIENTE -->

        <TextView
            android:id="@+id/pvl_txvLabelCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_weight=".48"
            android:text="Cliente"
            android:textSize="14dp" >
        </TextView>

        <!-- Status -->

        <TextView
            android:id="@+id/pvl_txvLabelCidade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight=".16"
            android:text="Status"
            android:textSize="14dp" >
        </TextView>

        <!-- TOTAL -->

        <TextView
            android:id="@+id/pvl_txvLabelTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_weight=".21"
            android:text="Total R$"
            android:textSize="14dp" >
        </TextView>
        
       <!-- Radio -->

        <TextView
            android:id="@+id/pvl_labelRadio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight=".10"
            android:text=""
            android:textSize="11dp" >
        </TextView>        
    </LinearLayout>

    <ListView
        android:id="@+id/pvl_ltv_dados"
        android:choiceMode="singleChoice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>